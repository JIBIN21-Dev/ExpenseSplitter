<!-- Views/Home/Index.cshtml -->
@{
    ViewData["Title"] = "Home";
}

<style>
    .hero-section {
        text-align: center;
        padding: 3rem 0;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: bold;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
        animation: fadeInUp 0.8s ease-out;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .hero-subtitle {
        font-size: 1.3rem;
        color: #666;
        margin-bottom: 2rem;
        animation: fadeInUp 1s ease-out;
    }

    .visitor-badge {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        padding: 1rem 2rem;
        border-radius: 50px;
        display: inline-block;
        font-size: 1.2rem;
        font-weight: 600;
        box-shadow: 0 8px 20px rgba(17, 153, 142, 0.3);
        animation: fadeInUp 1.2s ease-out;
        margin-bottom: 2rem;
    }

        .visitor-badge i {
            margin-right: 8px;
        }

    .feature-card {
        text-align: center;
        padding: 2.5rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s;
        height: 100%;
        animation: fadeInUp 1.4s ease-out;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

    .feature-icon {
        font-size: 4rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
    }

    .feature-card h3 {
        color: #333;
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .feature-card p {
        color: #666;
        line-height: 1.6;
        margin: 0;
    }

    .cta-section {
        margin-top: 3rem;
        animation: fadeInUp 1s ease-out;
    }

    .btn-hero {
        padding: 1rem 2.5rem;
        font-size: 1.2rem;
        border-radius: 50px;
        font-weight: 600;
        margin: 0.5rem;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-hero-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
    }

        .btn-hero-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-hero-outline {
        border: 3px solid #667eea;
        color: #667eea;
        background: white;
    }

        .btn-hero-outline:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transform: translateY(-3px);
            border-color: transparent;
        }

    .features-grid {
        margin-top: 4rem;
    }
</style>

<div class="hero-section">
    <h1 class="hero-title">
        <i class="fas fa-coins"></i> Welcome to Expense Splitter!
    </h1>
    <p class="hero-subtitle">Split bills with friends easily. Track who owes what. Never argue about money again!</p>

    <div class="mb-4">
        <div class="visitor-badge">
            <i class="fas fa-users"></i>
            <span>@ViewBag.TotalVisits Total Visitors</span>
        </div>
    </div>

    <div class="cta-section">
        <a asp-controller="Account" asp-action="Register" class="btn btn-hero btn-hero-primary">
            <i class="fas fa-rocket"></i>
            <span>Get Started</span>
        </a>
        <a asp-controller="Account" asp-action="Login" class="btn btn-hero btn-hero-outline">
            <i class="fas fa-sign-in-alt"></i>
            <span>Login</span>
        </a>
    </div>
</div>

<div class="row features-grid g-4">
    <div class="col-md-4">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-layer-group"></i>
            </div>
            <h3>Create Pool</h3>
            <p>Create a split pool for trips, parties, or any group expense in seconds</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-user-friends"></i>
            </div>
            <h3>Add Friends</h3>
            <p>Add members by email and split costs equally among everyone</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <h3>Track Payments</h3>
            <p>See who paid and who still owes money with real-time updates</p>
        </div>
    </div>
</div>