<!-- Main layout used by all pages -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Splitter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding-top: 60px; }
        .nav-link.active { font-weight: bold; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">💰 Expense Splitter</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pool" asp-action="Create">Create Pool</a>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">Hello, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!-- Views/Home/Index.cshtml -->
<!-- Landing page -->
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Expense Splitter! 🎉</h1>
    <p class="lead">Split bills with friends easily. Track who owes what. Never argue about money again!</p>

    <div class="alert alert-info mt-4">
        <strong>👥 Total Visitors:</strong> @ViewBag.TotalVisits
    </div>

    <div class="mt-5">
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-3">Get Started</a>
        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">Login</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <h3>📝 Create Pool</h3>
            <p>Create a split pool for trips, parties, or any group expense</p>
        </div>
        <div class="col-md-4">
            <h3>👥 Add Friends</h3>
            <p>Add members by email and split costs equally</p>
        </div>
        <div class="col-md-4">
            <h3>💸 Track Payments</h3>
            <p>See who paid and who still owes money</p>
        </div>
    </div>
</div>
